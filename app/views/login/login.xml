<page loaded="loaded" xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" id="login-page" backgroundSpanUnderStatusBar="true">
	<grid-layout>

		<!-- The parallax background. Give the background a negative margin-top to overlay  -->
		<!-- the iOS status bar. -->
		<grid-layout id="background" ios:marginTop="-20" scaleX="1.6" scaleY="1.6">
			<image src="res://bg_login.jpg" />
		</grid-layout>

		<!-- The initial content that displays when the page loads -->
		<stack-layout id="initial-container">
			<image src="res://logo_login" stretch="none" id="initial-logo" />

			<label text="GROCERIES" id="initial-label" />
			<stack-layout id="initial-button" tap="showMainContent">
				<label text="Login" id="initial-button-label" />
			</stack-layout>
		</stack-layout>

		<!-- The main container that contains the actual login & sign up form -->
		<stack-layout id="container" backgroundColor="{{ isLogin ? 'white' : '#301217' }}">
			<label text="GROCERIES" id="main-label" color="{{ isLogin ? 'black' : 'white' }}" />

			<grid-layout rows="auto, auto">
				<text-field
						id="email" text="{{ user.email }}" hint="Email Address" keyboardType="email"
						returnKeyType="next" returnPress="focusPassword"
						autocorrect="false" autocapitalizationType="none"
						row="0"
						color="{{ isLogin ? 'black' : 'white' }}" />
				<text-field id="password" secure="true" text="{{ user.password }}" hint="Password"
					returnKeyType="done" returnPress="signIn"
					row="1"
					color="{{ isLogin ? 'black' : 'white' }}" />
				<activity-indicator busy="{{ authenticating }}" rowSpan="2" />
			</grid-layout>

			<button text="Login" id="submit-button" tap="submit" />

			<label id="forgot-password-label" android:text="FORGOT PASSWORD?" ios:text="Forgot password?" tap="forgotPassword" opacity="{{ isLogin ? 1 : 0 }}" />

			<stack-layout id="sign-up-stack" tap="toggleDisplay">
				<label id="sign-up-label" android:text="{{ isLogin ? 'SIGN UP HERE' : 'BACK TO LOGIN' }}" ios:text="{{ isLogin ? 'Sign up here' : 'Back to login' }}" />
			</stack-layout>
		</stack-layout>

		<!-- The fruit logo that appears within the container -->
		<!-- A height of zero ensures that the absolute-layout container doesnâ€™t steal taps
		<!-- from the various button and text field controls that sit behind it. -->
		<absolute-layout horizontalAlignment="center" ios:height="0" id="container-logo">
			<image android:top="100" ios:top="-210" src="{{ isLogin ? 'res://logo_login' : 'res://logo_signup' }}" stretch="none" />
		</absolute-layout>
	</grid-layout>
</page>
