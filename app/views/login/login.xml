<Page loaded="loaded">
	<Page.actionBar>
		<ActionBar title="Sign in"></ActionBar>
	</Page.actionBar>
	<ScrollView>
		<StackLayout>
			<Image src="res://logo" stretch="none" horizontalAlignment="center" />

			<GridLayout rows="auto, auto">
				<TextField id="email" text="{{ email }}" hint="Email Address" keyboardType="email" returnKeyType="next" autocorrect="false" autocapitalizationType="none" row="0" />
				<TextField id="password" secure="true" text="{{ password }}" hint="Password" returnKeyType="done" row="1" />
				<ActivityIndicator busy="{{ authenticating }}" rowSpan="2" />
			</GridLayout>

			<Button text="Sign in" id="signInButton" tap="signIn" />
			<Button text="Sign up for Groceries" tap="register" cssClass="link" />
			<Button text="Forgot password?" tap="forgotPassword" cssClass="link" />
		</StackLayout>
	</ScrollView>
</Page>
