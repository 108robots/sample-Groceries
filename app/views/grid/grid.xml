<Page loaded="loaded" xmlns:lv="component/listview">
	<Page.actionBar>
		<ActionBar title="Grid Sorting"></ActionBar>
	</Page.actionBar>
	<GridLayout>
		<lv:ListView
			items="{{ dataList }}"
			cellReorder="true"
			selectionBehavior="Press">

			<lv:ListView.listViewLayout>
				<lv:ListViewGridLayout scrollDirection="Vertical" itemSpacing="5" lineSpacing="5" />
			</lv:ListView.listViewLayout>

			<lv:ListView.itemTemplate>
				<StackLayout orientation="vertical" >
					<Label text="{{ name }}" style="margin: 10;" />
				</StackLayout>
			</lv:ListView.itemTemplate>
		</lv:ListView>
	</GridLayout>
</Page>