<Page loaded="loaded" xmlns:lv="component/listview">
	<Page.actionBar>
		<ActionBar title="ListView Basics"></ActionBar>
	</Page.actionBar>
	<GridLayout>
		<lv:ListView
			id="list"
			items="{{ numberList }}"
			cellReorder="true"
			pullToRefresh="true"
			shouldRefreshOnPull="shouldRefreshOnPull"
			selectionBehavior="None"
			>
			<lv:ListView.listViewLayout>
				<lv:ListViewLinearLayout itemHeight="75" itemWidth="500" />
			</lv:ListView.listViewLayout>
			<lv:ListView.itemTemplate>
				<StackLayout>
					<Label text="{{ name }}"/>
				</StackLayout>
			</lv:ListView.itemTemplate>
		</lv:ListView>
	</GridLayout>
</Page>


