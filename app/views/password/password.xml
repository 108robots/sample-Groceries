<Page loaded="loaded">
	<Page.actionBar>
		<ActionBar title="Reset Password"></ActionBar>
	</Page.actionBar>
	<StackLayout>
		<Label text="Enter the email address you used to register for Groceries to reset your password." textWrap="true" />

		<TextField text="{{ email }}" id="email" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" />

		<Button text="Reset password" tap="reset" />
	</StackLayout>
</Page>
